<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="skipLinkingClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="linkAccountsClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="viewModel"
            type="org.linphone.activities.assistant.viewmodels.AccountLinkingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <TextView
            android:id="@+id/top_bar"
            style="@style/accent_colored_title_font"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="?attr/lightToolbarBackgroundColor"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/assistant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/warning_text"
            style="@style/standard_small_text_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Voulez-vous lier un de vos comptes sip.linphone.org avec un compte tiers pour lui faire bénéficier des push notifications ?\n\nSi oui, choisissez ci-dessous les 2 comptes à lier :"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_bar" />

        <TextView
            android:id="@+id/linphone_accounts_header"
            android:background="@color/header_background_color"
            android:text="Linphone accounts"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/warning_text" />

        <LinearLayout
            android:id="@+id/linphone_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:entries="@{viewModel.linphoneAccounts}"
            app:layout="@{@layout/assistant_account_linking_list_cell}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linphone_accounts_header"/>

        <TextView
            android:id="@+id/third_party_accounts_header"
            android:background="@color/header_background_color"
            android:text="Third party accounts"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linphone_accounts" />

        <LinearLayout
            android:id="@+id/third_party_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:entries="@{viewModel.thirdPartyAccounts}"
            app:layout="@{@layout/assistant_account_linking_list_cell}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/third_party_accounts_header"/>

        <Button
            android:id="@+id/skip_linking"
            android:backgroundTint="@color/red_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="@{skipLinkingClickListener}"
            android:text="Pas maintenant"
            app:layout_constraintEnd_toStartOf="@+id/link_accounts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/third_party_accounts" />

        <Button
            android:id="@+id/link_accounts"
            android:backgroundTint="@color/green_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="@{linkAccountsClickListener}"
            android:text="Lier les comptes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/skip_linking"
            app:layout_constraintTop_toBottomOf="@id/third_party_accounts" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
